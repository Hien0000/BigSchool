@model IEnumerable<bigschool.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

@*<div class="row">*@
<ul class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                    <button data-user-id="@course.Lecturer" class="btn btn-default btn-sm js-toggle-follow">Follow</button>
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
                <button data-course-id="@course.Id" class="btn btn-default btn-sm js-toggle-attendance">Going?</button>
            </div>
        </li>
    }
</ul>
@section scripts
{
    <script>
        $(document).ready(function ()){
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                $.post("/api/attendance", { courseId: button.attr("data-coure-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default ")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        alert("Something failed!");
                    });
            });

            $(document).ready(function ()){
                $(".js-toggle-attendance").click(function (e) {
                    var button = $(e.target);
                    $.post("/api/attendance", { courseId: button.attr("data-coure-id") })
                        .done(function () {
                            button
                                .removeClass("btn-default ")
                                .addClass("btn-info")
                                .text("Going");
                        })
                        .fail(function () {
                            alert("Something failed!");
                        });
                });
        });
    </script>
}

@*</div>*@